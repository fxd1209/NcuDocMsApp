<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/toolbal_base"
        android:id="@+id/teacher_main_toolbal" />

    <TableLayout
        android:id="@+id/teacher_main_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TableRow >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="序号"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="主题"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="内容"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                />

        </TableRow>
        <TableRow >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:text="11111111111111"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="22222222222222"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="7"
                android:singleLine="true"
                android:text="2019-06-17"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                />

        </TableRow>
        <TableRow >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:text="11111111111111"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="22222222222222"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="7"
                android:singleLine="true"
                android:text="2019-06-17"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                />

        </TableRow>




    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量删除"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_teacher_downloadimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美图下载"/>
        <Button
            android:id="@+id/btn_teacher_pausedownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停"/>
        <Button
            android:id="@+id/btn_teacher_canceldownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消下载"/>
    </LinearLayout>
</LinearLayout>
