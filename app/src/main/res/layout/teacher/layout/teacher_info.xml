<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbal_base"
        android:id="@+id/teacher_main_toolbal" /> <!--这个id会代替 toolbal_base里面的id，实际运行的时候是将toolbal_base
                                                               里面的代码拷贝过来-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/teacher_top"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/timg" />

        <TableLayout
            android:id="@+id/teacher_main_tableLayout"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/teacher_information_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:text="张三" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="性别" />

                <EditText
                    android:id="@+id/teacher_information_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:text="男" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/teacher_information_phonenumber"
                    android:layout_width="wrap_content"
                    android:inputType="phone"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:text="15112345678" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="电子邮箱" />

                <EditText
                    android:id="@+id/teacher_information_email"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:enabled="false"
                    android:text="123456789@qq.com" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:text="职称" />

                <EditText
                    android:id="@+id/teacher_information_protitle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:text="讲师" />
            </TableRow>


        </TableLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="所获荣誉"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:focusable="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="科研项目"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text=""
            android:focusable="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_teacher_info_change"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/selector_button"
            android:textSize="30dp"
            android:text="编辑" />
        <Button
            android:id="@+id/btn_teacher_info_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/selector_button"
            android:textSize="30dp"
            android:text="保存" />
        <!--android:background="@color/colorGreen"-->
</LinearLayout>
</LinearLayout>