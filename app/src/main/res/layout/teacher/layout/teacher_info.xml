<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbal_base"
        android:id="@+id/teacher_main_toolbal" /> <!--这个id会代替 toolbal_base里面的id，实际运行的时候是将toolbal_base
                                                               里面的代码拷贝过来-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/teacher_top"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:src="@drawable/timg" />

        <TableLayout
            android:id="@+id/teacher_main_tableLayout"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="姓名" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:text="张三" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="性别" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:text="男" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="民族" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:text="汉" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="出生日期" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:text="1988-1-1" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="工作经历"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="111111111111111"
        android:focusable="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="科研项目"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="111111111111111"
            android:focusable="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>
</LinearLayout>
