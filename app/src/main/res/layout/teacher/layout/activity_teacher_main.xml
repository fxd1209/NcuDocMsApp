<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <!-- android:text="添加&#10;课程" 换行-->
    <!-- android:text="添加\n课程" 换行-->
    <include
        layout="@layout/toolbal_base"
        android:id="@+id/teacher_main_toolbal" /><!--这个id会代替 toolbal_base里面的id，实际运行的时候是将toolbal_base
                                                               里面的代码拷贝过来-->

    <ImageView
        android:id="@+id/teacher_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/timg" />
    <TableLayout
        android:id="@+id/teacher_main_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TableRow android:gravity="center">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="#E1FFFF"
                android:src="@drawable/zhishi" />
            <Button
                android:id="@+id/btn_teacher_courseList"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:background="#E1FFFF"
                android:text="我的\n课程" />


            <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="#F5DEB3"
            android:layout_marginStart="10dp"
            android:src="@drawable/chazhao"/>

            <Button
            android:id="@+id/btn_teacher_selectCourse"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="#F5DEB3"
            android:textSize="20sp"
            android:text="选择\n课程" />

        </TableRow>
        <TableRow android:gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="#FFE4E1"
            android:src="@drawable/bianji" />

            <Button
            android:id="@+id/btn_teacher_addCourse"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:background="#FFE4E1"
            android:text="添加\n课程" /> <!--换行-->

            <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:background="#ADD8E6"
            android:src="@drawable/wode" />


            <Button
            android:id="@+id/btn_teacher_info"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="#ADD8E6"
            android:textSize="20sp"
            android:text="个人\n信息" />

        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginTop="15dp">

            <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="#FFFF00"
            android:src="@drawable/tongzhi" />

            <Button
            android:id="@+id/btn_teacher_notice"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginEnd="10dp"
            android:background="#FFFF00"
            android:textSize="20sp"
            android:text="信息\n通知" />

            <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:background="#EE82EE"
            android:src="@drawable/dianzan" />

            <Button
            android:id="@+id/btn_teacher_appraise"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:background="#EE82EE"
            android:textSize="20sp"
            android:text="学生\n评价" />

        </TableRow>
    </TableLayout>


</LinearLayout>
