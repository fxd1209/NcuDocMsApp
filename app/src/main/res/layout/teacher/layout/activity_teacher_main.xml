<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/teacher_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/timg" />
    <TableLayout
        android:id="@+id/teacher_main_tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TableRow android:gravity="center">
            <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="#E1FFFF"
            android:src="@drawable/zhishi" />
            <Button
            android:id="@+id/btn_teacher_myclass"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            android:background="#E1FFFF"
            android:text="我的课程" />


            <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="#F5DEB3"
            android:layout_marginLeft="15dp"
            android:src="@drawable/chazhao"/>

            <Button
            android:id="@+id/btn_teacher_selectclass"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#F5DEB3"
            android:textSize="20sp"
            android:text="选择课程" />

        </TableRow>
        <TableRow android:gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="#EE82EE"
            android:src="@drawable/bianji" />

            <Button
            android:id="@+id/btn_teacher_addclass"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            android:background="#EE82EE"
            android:text="添加课程" />

            <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="#FFE4E1"
            android:src="@drawable/wode" />


            <Button
            android:id="@+id/btn_teacher_mymessage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#FFE4E1"
            android:textSize="20sp"
            android:text="个人信息" />

        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginTop="15dp">

            <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="#32CD32"
            android:src="@drawable/tongzhi" />

            <Button
            android:id="@+id/btn_teacher_notice"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="15dp"
            android:background="#32CD32"
            android:textSize="20sp"
            android:text="信息通知" />

            <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="#800080"
            android:src="@drawable/dianzan" />

            <Button
            android:id="@+id/btn_teacher_appraise"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#800080"
            android:textSize="20sp"
            android:text="学生评价" />

        </TableRow>
    </TableLayout>


</LinearLayout>
